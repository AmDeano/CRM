@model IEnumerable<CRM.Models.Client>
@{
    ViewData["Title"] = "Clients";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>My Clients</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Client
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No clients yet. Create your first client to get started!
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var client in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">@client.Name</h5>
                            <p class="card-text text-muted">
                                <i class="bi bi-envelope"></i> @client.EmailAddress<br />
                                <i class="bi bi-telephone"></i> @client.Phone<br />
                                <i class="bi bi-calendar"></i> Added: @client.CreatedDate.ToShortDateString()
                            </p>
                            <div class="mt-3">
                                <span class="badge bg-info">@client.Projects?.Count() Projects</span>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <a asp-action="Details" asp-route-id="@client.Id" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-eye"></i> View
                            </a>
                            <a asp-action="Edit" asp-route-id="@client.Id" class="btn btn-sm btn-outline-secondary">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <form asp-action="Delete" asp-route-id="@client.Id" method="post" class="d-inline"
                                  onsubmit="return confirm('Are you sure you want to delete this client?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>